{
  "mcp_config": {
    "rabbitmq_host": "localhost"
  },
  "llm_engines": {
    "ollama_phi3_mini": { "source": "local", "locked": true, "toggle": true, "model": "phi3:mini" },
    "ollama_tinyllama": { "source": "local", "locked": false, "toggle": true, "model": "tinyllama" },
    "ollama_codegemma": { "source": "local", "locked": false, "toggle": true, "model": "codegemma:2b" },
    "ollama_gemma": { "source": "local", "locked": false, "toggle": true, "model": "gemma:2b" },
    "ollama_moondream": { "source": "local", "locked": false, "toggle": true, "model": "moondream" },
    "ollama_mathstral": { "source": "local", "locked": true, "toggle": true, "model": "mathstral" },
    "ollama_nomic_embed": { "source": "local", "locked": true, "toggle": true, "model": "nomic-embed-text" },
    "openai_gpt4": { "source": "api", "locked": true, "toggle": false, "model": "gpt-4-turbo" }
  },
  "agent_profiles": {
    "Developer": ["Diagnosis-Agent", "Planner-Agent", "Fast-Coder-Agent", "Deep-Coder-Agent", "QA-Agent", "Vision-Agent", "Debug-Agent", "Research-Agent"],
    "Productivity": ["Financial-Agent", "Planner-Agent", "Writing-Agent", "Teacher-Agent", "Chat-Agent"],
    "General": ["Chat-Agent"]
  },
  "load_balancer_rules": {
    "default_engine": "ollama_phi3_mini",
    "rules": [
      { "condition": "agent.is_one_of(['FastCoderAgent'])", "engine": "ollama_tinyllama" },
      { "condition": "agent.is_one_of(['DeepCoderAgent', 'DebugAgent'])", "engine": "ollama_codegemma" },
      { "condition": "agent.is_one_of(['WritingAgent', 'TeacherAgent', 'FinancialAgent'])", "engine": "ollama_gemma" },
      { "condition": "agent.is_one_of(['VisionAgent'])", "engine": "ollama_moondream" },
      { "condition": "agent.is_one_of(['ResearchAgent'])", "engine": "ollama_mathstral" },
      { "condition": "agent.is('PlannerAgent') and prompt.contains('simple plan')", "engine": "ollama_gemma" }
    ]
  }
}
